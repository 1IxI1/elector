{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "jsx": "preserve"
    },
    "include": [
        "src/**/*", "vite.config.ts",
        "src/runner/executor/emulator-emscripten.d.ts",
        "src/runner/executor/emulator-emscripten-wasm.d.ts"
    ],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["emulator-emscripten"],
    "exclude": [
        "**/*.spec.ts"
    ]
}
